{
  "name": "doodle-mail-server",
  "version": "1.0.0",
  "description": "A simple server to enable sending and storing picture messages.",
  "main": "server.js",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongodb": "3.6.6",
    "mongoose": "^5.12.5",
    "multer": "^1.4.2",
    "nanoid": "^3.1.22",
    "swagger-jsdoc": "6.0.0",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.13.16",
    "@babel/preset-env": "^7.13.15",
    "@babel/register": "^7.13.16",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "concurrently": "^6.0.2",
    "eslint": "^7.24.0",
    "jest": "^26.6.3",
    "mongodb-memory-server": "6.9.6",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "build": "babel --delete-dir-on-start --out-dir dist --copy-files --ignore \"**/__tests__/**,**/__mocks__/**\" --no-copy-ignored src",
    "build:dev": "tsc --watch --preserveWatchOutput",
    "dev": "set NODE_ENV=development&& concurrently \"npm:build:dev\" \"npm:start:dev\"",
    "start:dev": "nodemon dist/index.js",
    "start": "set NODE_ENV=production&& node .",
    "test": "yarn build && jest --verbose --silent --runInBand",
    "test:watch": "concurrently \"npm:build:dev\" \"jest --watchAll --coverage --verbose --silent --runInBand\""
  },
  "author": "Michael Peto",
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
